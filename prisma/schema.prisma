// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @db.Uuid @default(uuid())
  name String
  username String @unique
  password String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  imgUrl String?

  tweets Tweet[]
  likes Like[]

  following Follower[] @relation(name: "following")
  followers Follower[] @relation(name: "followers")

  @@map("user")
}

model Tweet {
  id String @id @db.Uuid @default(uuid())
  content String
  type String @db.Char(1) @default("N")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  idUser String @db.Uuid @map("id_user")
  user User @relation(fields: [idUser], references: [id])

  // if tweet is a reply,  
  repliedTweetId String? @db.Uuid
  repliedTweet Tweet? @relation(fields: [repliedTweetId], references: [id], name: "replies")

  replies Tweet[] @relation(name: "replies")

  likes Like[]

  @@map("tweet")
}

model Like {
  idUser String @db.Uuid @map("id_user")
  idTweet String @db.Uuid @map("id_tweet")

  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [idUser], references: [id])
  tweet Tweet @relation(fields: [idTweet], references: [id])

  @@id([idTweet, idUser])
  
}

model Follower {
  idUser String @db.Uuid @map("id_user")
  idFollowedUser String @db.Uuid @map("id_followed_user")
  
  user User @relation(fields: [idUser], references: [id], name: "following")
  followedUser User @relation(fields: [idFollowedUser], references: [id], name: "followers")

  createdAt DateTime @default(now()) @map("created_at")

  @@id([idFollowedUser, idUser])
  @@map("follower")
}

